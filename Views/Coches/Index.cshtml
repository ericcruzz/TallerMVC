@model List<TallerMVC.Models.ViewModels.ListViewCoche>
@{
    ViewBag.Title = "Lista de Coches";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-12" style="text-align:left">
        <a href="~/Coches/Nuevo_Coche" class="btn btn-success">
            Nuevo 
            <i class="fa-solid fa-car fa-beat fa-sm" style="color: #f5f5f5;"></i>
            <br>
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered align-middle" style="background-color: #f6f1de; border: #fafafa; ">
            <tr>
                <th>ID Coche</th>
                <th>Placa</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Año</th>
                <th>Color</th>
                <th>Nombre del Propietario</th>

                @foreach (var coche in Model)
                {
                <tr>
                    <td>@coche.idCoche</td>
                    <td>@coche.placa</td>
                    <td>@coche.marca</td>
                    <td>@coche.modelo</td>
                    <td>@coche.anio</td>
                    <td>@coche.color</td>
                    <td>@coche.cliente</td>

                    <td>
                        <a class="btn btn-warning" href="~/Coches/Editar_Coche/@coche.idCoche">
                            <i class="fa-regular fa-pen-to-square fa-shake" style="color: #f0f0f0;"></i>
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-danger" href="~/Coches/Eliminar_Coche/@coche.idCoche">
                            <i class="fa-solid fa-trash-can fa-bounce" style="color: #f0f2f4;"></i>
                        </a>
                    </td>
                </tr>
            }
            </table>
        </div>
</div>

