@model List<TallerMVC.Models.ViewModels.ListViewEstadoAuto>
@{
    ViewBag.Title = "Estado del auto";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-12" style="text-align:left">
        <a href="~/EstadoAuto/Nuevo_EstadoAuto" class="btn btn-success">
            Nuevo
            <i class="fa-solid fa-file fa-beat fa-xs" style="color: #fafafa;"></i>
            <br>
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered align-middle" style="background-color: #f6f1de; border: #fafafa; ">
            <tr>
                <th>Id</th>
                <th>Coche</th>
                <th>Condiciones</th>
                <th>Inventario</th>
                <th>Fecha de Registro</th>

                @foreach (var edoauto in Model)
                {
                <tr>
                    <td>@edoauto.idEstadoAuto</td>
                    <td>@edoauto.coche</td>
                    <td>@edoauto.condicion</td>
                    <td>@edoauto.inventario</td>
                    <td>@edoauto.FechaEdo.ToShortDateString()</td>

                    <td>
                        <a class="btn btn-warning" href="~/EstadoAuto/Editar_EstadoAuto/@edoauto.idEstadoAuto">
                            <i class="fa-regular fa-pen-to-square fa-shake" style="color: #f0f0f0;"></i>
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-danger" href="~/EstadoAuto/Eliminar_EstadoAuto/@edoauto.idEstadoAuto">
                            <i class="fa-solid fa-trash-can fa-bounce" style="color: #f0f2f4;"></i>
                        </a>
                    </td>
                </tr>
            }
            </table>
        </div>
</div>



